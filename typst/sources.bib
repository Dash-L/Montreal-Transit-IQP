@article{canadian_broadcasting_corporation_montreal_2016,
	title = {Montreal Metro Marks 50th Anniversary},
	url = {http://ezproxy.wpi.edu/login?url=https://www.proquest.com/other-sources/montreal-metro-marks-50th-anniversary/docview/1829009617/se-2?accountid=29120},
	abstract = {Riding the metro is something many Montrealers have made part of their everyday lives. The city's subway system turned 50 years old today, and to mark the occasion, the {CBC}'s Neil Herland took a ride through the metro's storied history.


