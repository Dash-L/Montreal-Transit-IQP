	keywords = {Age, Buses, Children, Economic models, England, Epidemiology, Loneliness, Medical Sciences, Mental depression, Mental disorders, Mental health, Older people, Pensions, Public policy, Public transportation, Quantitative research, Quasi-experimental design, Quasi-experimental methods, Social, Social interactions, Social isolation, Transportation policy, Travel, United Kingdom--{UK}, Variables, ageing, depression, loneliness, mental health, policy, transportation},
