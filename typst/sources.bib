	author = {Devaux, Nicolas and Dubé, Jean and Apparicio, Philippe},
	date = {2017},
	keywords = {Cities, Construction, Data processing, Economic impact, Hedonic pricing model, Heterogeneity, Housing prices, Housing values, Infrastructure, Public transportation, Repeated sales approach, Residential buildings, Spatial difference-in-differences ({SDID}) estimator, Spatiotemporal analysis, Subway stations, Subways, Urban transportation},
